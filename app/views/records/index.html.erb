<h1>Lista de Registros</h1>

<table>
  <tr>
    <th>Dominio</th>
    <th>Direccion</th>
    <th>Permisos</th>
  </tr>

<% @records.each do |record| %>
  <tr>
    <td><%=h record.domain_id %></td>
    <td><%=h record.address %></td>
    <td><%=h record.acl %></td>
    <td><%= link_to 'Mostrar', record %></td>
    <td><%= link_to 'Modificar', edit_record_path(record) %></td>
    <td><%= link_to 'Eliminar', record, :confirm => 'Esta seguro?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Nuevo Registro', new_record_path %>
